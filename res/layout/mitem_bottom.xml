<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/mitem_bottom_zan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/mitem_bottom_zan_img"
                style="@style/duanzi_item_bottom_img"
                android:src="@drawable/ic_digg_normal" />

            <TextView
                android:padding="1dp"
                android:textSize="@dimen/ts_13"
                android:layout_centerVertical="true"
                android:id="@+id/mitem_bottom_zan_txt"
                style="@style/duanzi_item_bottom_text"
                android:layout_toRightOf="@+id/mitem_bottom_zan_img"
                android:text="12" />

            <TextView
                android:layout_above="@+id/mitem_bottom_zan_txt"
                android:layout_toRightOf="@+id/mitem_bottom_zan_img"
                android:id="@+id/mitem_bottom_zan_tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duanzi_add_1"
                android:textColor="@color/orange"
                android:textSize="@dimen/ts_13" />
			
        </RelativeLayout>

        <View style="@style/item_line" />

        <RelativeLayout
            android:id="@+id/mitem_bottom_cai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/mitem_bottom_cai_img"
                style="@style/duanzi_item_bottom_img"
                android:src="@drawable/ic_bury_normal" />

            <TextView
                android:id="@+id/mitem_bottom_cai_txt"
                style="@style/duanzi_item_bottom_text"
                android:layout_toRightOf="@+id/mitem_bottom_cai_img"
                android:text="131" />

            <TextView
                android:id="@+id/mitem_bottom_cai_tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mitem_bottom_cai_txt"
                android:layout_alignLeft="@+id/mitem_bottom_cai_txt"
                android:text="@string/duanzi_add_1"
                android:textColor="@color/orange"
                android:textSize="@dimen/ts_20"
                android:visibility="gone" />
        </RelativeLayout>

        <View style="@style/item_line" />

        <RelativeLayout
            android:padding="@dimen/margin_10"
            android:id="@+id/mitem_bottom_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/mitem_bottom_hot_img"
                style="@style/duanzi_item_bottom_img"
                android:src="@drawable/mai_comment" />

            <TextView
                android:id="@+id/mitem_bottom_hot_txt"
                style="@style/duanzi_item_bottom_text"
                android:layout_toRightOf="@+id/mitem_bottom_hot_img"
                android:text="131" />
        </RelativeLayout>

        <View style="@style/item_line" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/bottom_more"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_more_action_normal_night" />
    </LinearLayout>

</LinearLayout>