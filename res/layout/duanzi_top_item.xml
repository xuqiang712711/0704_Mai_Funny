<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/tab_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >
		<TextView
            android:id="@+id/tab_top_text"
            android:background="@color/white"
            style="@style/Top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableBottom="@drawable/down_arrow_titlebar"
            android:textSize="@dimen/ts_25"
            android:text="xxx" />


        <ImageView
            android:id="@+id/tab_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/mai_refresh_3" />


    </RelativeLayout>
    <View 
        android:id="@+id/tab_top_line"
        android:layout_below="@+id/tab_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/gainsboro"/>

    <LinearLayout
        android:id="@+id/duanzi_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_top_line"
        android:background="@color/gainsboro"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>