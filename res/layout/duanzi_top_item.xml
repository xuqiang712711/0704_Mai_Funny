<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/tab_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gainsboro" >
		<TextView
            android:id="@+id/tab_top_text"
            style="@style/Top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableBottom="@drawable/up_arrow_titlebar"
            android:text="xxx" />


        <ImageView
            android:id="@+id/tab_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/refresh_pre" />


    </RelativeLayout>
    <View 
        android:layout_below="@+id/tab_top"
        android:id="@+id/tab_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/slategray"/>

    <LinearLayout
        android:id="@+id/duanzi_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_line"
        android:background="@color/gainsboro"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>