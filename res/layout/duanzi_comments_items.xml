<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/dz_com_lv_top"
        style="@style/match_horizontal"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10" >

        <ImageView
            android:id="@+id/dz_com_lv_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/margin_10"
            android:contentDescription="@null"
            android:src="@drawable/mai_2_my" />

        <TextView
            android:textSize="@dimen/ts_13"
            android:id="@+id/dz_com_lv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dz_com_lv_icon"
            android:layout_toRightOf="@+id/dz_com_lv_icon"
            android:textColor="@color/black"
            android:text="用户名" />

        <TextView
            android:id="@+id/dz_com_lv_time"
            style="@style/wrap"
            android:layout_below="@+id/dz_com_lv_name"
            android:layout_toRightOf="@+id/dz_com_lv_icon"
            android:textSize="@dimen/ts_10"
            android:textColor="@color/gray"
            android:text="XX小时之前" />

        <TextView
            android:textSize="@dimen/ts_15"
            style="@style/duanzi_content_textview"
            android:id="@+id/dz_com_lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dz_com_lv_time"
            android:layout_toRightOf="@+id/dz_com_lv_icon"
            android:text="评论内容" />
    </RelativeLayout>

</RelativeLayout>