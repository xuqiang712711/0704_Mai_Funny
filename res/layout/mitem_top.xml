<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mitem_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_edit_profile_night" />

        <TextView
            android:textColor="@color/darkgray"
            android:layout_marginLeft="@dimen/margin_5"
            android:id="@+id/mitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_20"
            android:text="xxx" />
    </LinearLayout>
    
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/mitem_test_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="i am content" />
	<ImageView 
	    android:layout_gravity="center"
	    android:id="@+id/mitem_test_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/mitem_test_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView 
            android:id="@+id/mitem_hint_img"
            android:visibility="gone"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/mai_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
	</FrameLayout>


</LinearLayout>