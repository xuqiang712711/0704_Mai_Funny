<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_edit_profile_night" />

        <TextView
            android:id="@+id/mitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx" />
    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/mitem_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="i am content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.example.util.DrawableCenterTextView
            android:layout_margin="5dp"
            android:id="@+id/zan_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_digg_normal"
            android:text="zan" />

        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <com.example.util.DrawableCenterTextView
            android:layout_margin="5dp"
            android:id="@+id/cai_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_bury_normal"
            android:text="cai" />
        
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <com.example.util.DrawableCenterTextView
            android:layout_margin="5dp"
            android:id="@+id/hot_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/hot_commenticon_textpage"
            android:text="hot" />
        
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <ImageView
            android:id="@+id/more_img"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_more_action_normal_night" />
    </LinearLayout>

</LinearLayout>