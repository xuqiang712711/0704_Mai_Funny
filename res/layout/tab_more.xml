<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <include 
            layout="@layout/back_duanzi"/>

        <LinearLayout style="@style/my_action" 
            android:layout_marginTop="0dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5">

            <include
                android:id="@+id/more_recommond"
                layout="@layout/more_style1"
                android:clickable="true" />

            <include layout="@layout/line_horizontal" />

            <include
                android:id="@+id/more_feedback"
                layout="@layout/more_style1" />
        </LinearLayout>

        <LinearLayout style="@style/my_action"
            android:layout_margin="5dp" >

            <include
                android:id="@+id/more_update"
                layout="@layout/more_style2" />

            <include layout="@layout/line_horizontal" />

            <include
                android:id="@+id/more_zhuanfa"
                layout="@layout/more_style3" />

            <include layout="@layout/line_horizontal" />



            <include
                android:id="@+id/more_fontSize"
                layout="@layout/more_style4" />

            <include layout="@layout/line_horizontal" />


            <include
                android:id="@+id/more_Cache"
                layout="@layout/more_style1" />

            <include layout="@layout/line_horizontal" />

            <include
                android:id="@+id/more_contact"
                layout="@layout/more_style1" />

            <include layout="@layout/line_horizontal" />

            <include
                android:id="@+id/more_help"
                layout="@layout/more_style1" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>