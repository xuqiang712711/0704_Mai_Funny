<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb">

	<LinearLayout 
	    android:background="@color/ghostwhite"
    android:id="@+id/tab_container"
    android:layout_width="fill_parent"
    android:layout_height="72.0dip"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@id/channel1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ImageView
            android:id="@id/tt_tab_recommend_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mai_duanzi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5.0dip"
            android:text="@string/tab_bar_duanzi"
            android:textColor="@color/TextColor_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/channel2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginTop="5dip"
            android:id="@id/tt_tab_best_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mai_normal_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5.0dip"
            android:text="@string/tab_bar_image"
           android:textColor="@color/TextColor_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="8.0dip"
        android:id="@id/channel3"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ImageView
            android:id="@id/tt_tab_guide_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mai_edit3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6.0dip"
            android:layout_marginTop="3.0dip"
            android:textColor="@color/TextColor_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/channel4"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginTop="5dip"
            android:id="@id/tt_tab_community_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mai_user_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5.0dip"
            android:text="@string/tab_bar_mine"
            android:textColor="@color/TextColor_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/channel5"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginTop="5dip"
            android:id="@id/tt_tab_more_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mai_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5.0dip"
            android:text="@string/tab_bar_more"
            android:textColor="@color/TextColor_bottom" />
    </RelativeLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_container"
        android:orientation="vertical" >
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/content_container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>


</RelativeLayout>