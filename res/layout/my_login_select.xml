<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    <ImageView 
        android:layout_gravity="center_horizontal"
        android:id="@+id/my_select_sina"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/weibo_72x72"/>

    <ImageView
        android:id="@+id/my_select_tencent"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/tencen_72x72" />

    <ImageView
        android:id="@+id/my_select_douban"
        android:layout_gravity="center_horizontal"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/douban_72x72" />

    <ImageView
        android:id="@+id/my_select_renren"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/renren_72x72" />
	
</LinearLayout>
