<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 最大化 -->
    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- 横向最大化 -->
    <style name="match_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 自适应 -->
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 标题 -->
    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
	<!-- 更多——用户信息_TextView -->
    <style name="user_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 更多——用户操作 -->
    <style name="my_action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:background" >@drawable/userinfo</item>
    </style>
    
    <style 
        name="my_action_cotent">
        <item name="android:padding">2dp</item>
		<item name="android:clickable">true</item>        
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 黑线 -->
	<style 
	    name="my_action_line">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">0.1dp</item>
	    <item name="android:background">@color/slategray</item>
	</style>
	<!-- 更多——版本号、缓存 -->
	<style  name="more_text">
	    <item name="android:layout_margin">5dip</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">13sp</item>
	    <item name="android:textColor">#000000</item>
	</style>
	
	<!-- 更多——Checkbox -->
	<style name="checkbox" parent="@style/wrap">
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:button">@drawable/check</item>
	</style>
	
	<!-- 更多——RadioButton -->
	<style name="radiobutton" parent="@style/wrap">
        <item name="android:gravity">center</item>
	    <item name="android:button">@null</item>
	    <item name="android:background">@drawable/radiobutton</item>
	</style>
	
	<!-- 我的——转发图片 -->
	<style name="my_image" parent="@style/wrap">
	    <item name="android:contentDescription">@null</item>
	    <item name="android:layout_margin">5dp</item>
	</style>
	
	<style name="my_background" parent="@style/match">
	    <item name="android:background">@color/gray</item>
	    <item name="android:clickable">true</item>
	</style>
	
	<style name="my_check_bottem_bg" parent="@style/wrap">
	    <item name="android:background">@drawable/my_check_bottom_bg</item>
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:clickable">true</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:gravity">center</item>
	</style>
	
	<style name="top_pop_item" parent="@style/match_horizontal">
	    <item name="android:textSize">@dimen/ts_20</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:layout_marginLeft">@dimen/margin_10</item>
	    <item name="android:layout_marginRight">@dimen/margin_10</item>
	    <item name="android:layout_marginTop">@dimen/margin_5</item>
	    <item name="android:layout_marginBottom">@dimen/margin_5</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:drawablePadding">@dimen/margin_10</item>
	</style>
	
	<style name="item_line">
	    <item name="android:layout_width">0.3dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@color/gery</item>
	</style>
	
	<!-- 评论，分享按钮 -->
	<style name="share_button">
	    <item name="android:layout_width">48dp</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:clickable">true</item>
	</style>
	
	<!-- 段子——底部踩、赞等图片-->
	<style name="duanzi_item_bottom_img">
	    <item name="android:layout_width">20dp</item>
	    <item name="android:layout_height">20dp</item>
	</style>
	
	<!-- 段子——踩、赞文字 -->
		<style name="duanzi_item_bottom_text">
	    <item name="android:layout_width">20dp</item>
	    <item name="android:layout_height">20dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/darkblue</item>
	</style>
	
	<!-- 标题 -->
		<style name="Top_title" parent="@style/match_horizontal">
		    <item name="android:textSize">@dimen/top_title</item>
		    <item name="android:background">@color/skyblue</item>
		    <item name="android:gravity">center_horizontal</item>
		    <item name="android:paddingLeft">10dp</item>
		    <item name="android:paddingRight">10dp</item>
		    <item name="android:paddingTop">10dp</item>
		</style>
	<!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
	
    <!-- duanzi_more_pop -->
    <style name="duanzi_more_pop_iv" parent="@style/wrap">
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="duanzi_more_pop_tv" parent="@style/wrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/ts_15</item>
    </style>
    
    <!-- 账号管理background -->
    <style name="my_edit" parent="@style/match_horizontal">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
    </style>
    
    <!-- 账号管理——Text -->
    <style name="my_edit_text" parent="@style/wrap">
        <item name="android:textSize">@dimen/ts_18</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>
</resources>